concatenation = true
catch-all = true
accept-x-kannel-headers = true


group = sms-service
keyword = ONDOA
post-url = "http://192.168.1.10/api/sms/receivedsms?service=%k&category=%s&sender=%p&timestamp=%t"
assume-plain-text = true
concatenation = true
catch-all = true
accept-x-kannel-headers = true

group = sms-service
keyword = nop
text = "You asked nothing, I did it!"
catch-all = false

group = sms-service
keyword = default
post-url = "http://192.168.1.10/api/ai/receivedsms?service=%k&category=%s&sender=%p&timestamp=%t&text=%a"
assume-plain-text = true
concatenation = true
catch-all = true
accept-x-kannel-headers = true

