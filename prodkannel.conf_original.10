group = sendsms-user
username = afya
password = Afya4017
default-smsc = vodacom

group = sms-service
keyword = AFYA
post-url = "http://192.168.1.10/api/sms/receivedsms?service=%k&category=%s&sender=%p&timestamp=%t"
